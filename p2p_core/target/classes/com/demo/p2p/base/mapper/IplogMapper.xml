<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.p2p.base.mapper.IplogMapper">
  <resultMap id="BaseResultMap" type="com.demo.p2p.base.pojo.Iplog">
      <result column="id" property="id" javaType="java.lang.Long" jdbcType="BIGINT" />
      <result column="ip" property="ip" javaType="java.lang.String" jdbcType="VARCHAR" />
      <result column="state" property="state" javaType="java.lang.Byte" jdbcType="TINYINT" />
      <result column="username" property="username" javaType="java.lang.String" jdbcType="VARCHAR" />
      <result column="loginTime" property="logintime" javaType="java.util.Date" jdbcType="TIMESTAMP" />
      <result column="loginInfoId" property="logininfoid" javaType="java.lang.Long" jdbcType="BIGINT" />
      <result column="usertype" property="usertype" javaType="java.lang.Integer" jdbcType="INTEGER"/>
  </resultMap>
   
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into `iplog` (ip, state, userName, loginTime,logininfoid,usertype)
    values (#{ip,jdbcType=VARCHAR}, #{state,jdbcType=TINYINT}, #{username,jdbcType=VARCHAR}, 
      #{logintime,jdbcType=TIMESTAMP},#{logininfoid},#{usertype})
  </insert>
  
  <sql id="base_column">
  	id, ip, state, userName, loginTime,logininfoid,usertype
  </sql>
  <sql id="base_where">
  	<where>
  		<!-- 大于开始时间 -->
  		<if test="beginDate!=null">
  			AND loginTime &gt;= #{beginDate}
  		</if>
  		<!-- 小于结束时间 -->
  		<if test="endDate!=null">
  			AND loginTime &lt;= #{endDate}
  		</if>
  		<if test="state>-1">
  			AND state = #{state}
  		</if>
  		<if test="username!=null">
  			AND username = #{username}
  		</if>
  		<if test="usertype>-1">
  			AND usertype = #{usertype}
  		</if>
  	</where>
  </sql>
  
  <select id="queryForCount" resultType="int">
  	SELECT count(id)
  	FROM iplog
  	<include refid="base_where" />
  </select>
  
  <select id="query" resultMap="BaseResultMap">
  	SELECT <include refid="base_column" />
  	FROM iplog
  	<include refid="base_where" />
  	ORDER BY loginTime DESC
  	LIMIT #{start},#{pageSize}
  </select>
</mapper>